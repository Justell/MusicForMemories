<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skytwo"
    tools:context="com.example.android.musicformemories.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            style="@style/TextCursive"
            android:text="@string/music_is_life"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/marginsL"
            android:layout_marginRight="@dimen/marginsL"
            android:textSize="@dimen/textSizeXL"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            />

        <TextView
            style="@style/TextCursive"
            android:text="@string/author"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textSizeL" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/playgrey"
            android:layout_marginTop="@dimen/marginsM"
            android:layout_marginBottom="@dimen/marginsM"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/icon"
            android:gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>